{
  "name": "dryad-engine",
  "version": "0.2.0",
  "main": "electron/main.cjs",
  "description": "Dryad Engine - A Vue 3 and Electron based application for making modern 2D text-based games",
  "author": {
    "name": "Nekon",
    "email": "dryadquest@gmail.com"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "start2": "cross-env NO_WATCH=true vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "electron": "electron --no-sandbox .",
    "electron-dev": "npm run build && electron --no-sandbox .",
    "electron-build": "npm run build && electron-builder build --linux",
    "electron-unpacked": "ELECTRON_DISABLE_SANDBOX=1 npm run build && electron-builder build --linux --dir",
    "electron-dev-debug": "npm run build && cross-env DEBUG=true electron --no-sandbox ."
  },
  "dependencies": {
    "@esotericsoftware/spine-pixi-v8": "^4.2.95",
    "@esotericsoftware/spine-player": "^4.2.95",
    "@floating-ui/vue": "^1.1.9",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@fontsource/lora": "^5.2.8",
    "@primeuix/themes": "^1.0.3",
    "@types/sortablejs": "^1.15.8",
    "@vueuse/core": "^13.1.0",
    "@vueuse/integrations": "^13.1.0",
    "@vueuse/rxjs": "^13.1.0",
    "archiver": "^7.0.1",
    "fast-copy": "^3.0.2",
    "google-auth-library": "^9.15.1",
    "googleapis": "^148.0.0",
    "gsap": "^3.13.0",
    "highlight.js": "^11.11.1",
    "idb": "^8.0.2",
    "jsonrepair": "^3.12.0",
    "markdown-it": "^14.1.0",
    "pixi.js": "^8.14.0",
    "powerglitch": "^2.5.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.4.1",
    "quill": "^2.0.3",
    "rxjs": "~7.8.0",
    "sharp": "^0.34.4",
    "short-unique-id": "^5.3.2",
    "sortablejs": "^1.15.6",
    "vue": "^3.5.13",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/markdown-it": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.2.2",
    "@vue/tsconfig": "^0.7.0",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.1.0",
    "typescript": "~5.7.2",
    "vite": "^6.3.1",
    "vite-plugin-checker": "^0.9.1",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.10"
  },
  "build": {
    "appId": "com.dryad.engine",
    "productName": "Dryad Engine",
    "directories": {
      "output": "production"
    },
    "asar": false,
    "files": [
      "dist/**/*",
      "!dist/assets/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/sharp/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/assets",
        "to": "assets",
        "filter": [
          "**/*",
          "**/.vscode/**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility",
      "maintainer": "Nekon <dryadquest@gmail.com>"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}